<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chargePhotoHeader"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_charge" />

        <LinearLayout
            android:id="@+id/containerCharge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/damier_background" >

                <LinearLayout
                    android:id="@+id/takePhotos_charge_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/takePhoto_charge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_charge"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/extendedComment_charge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/headerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments" />

            <EditText
                android:id="@+id/comments_charge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/comments_hints"
                android:inputType="textMultiLine"
                android:lines="5" />
        </LinearLayout>
        
        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_move" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/damier_background" >

                <LinearLayout
                    android:id="@+id/takePhotos_move_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/takePhoto_move"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_move"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extendedComment_move"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/headerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments" />

            <EditText
                android:id="@+id/comments_move"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/comments_hints"
                android:inputType="textMultiLine"
                android:lines="5" />
        </LinearLayout>
        <!--  -->
        
        <TextView
            android:id="@+id/powerPhotoHeader"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_power" />

        <LinearLayout
            android:id="@+id/containerPower"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/damier_background" >

                <LinearLayout
                    android:id="@+id/takePhotos_power_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/takePhoto_power"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_power"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/extendedComment_power"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/headerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments" />

            <EditText
                android:id="@+id/comments_power"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/comments_hints"
                android:inputType="textMultiLine"
                android:lines="5" />
        </LinearLayout>
        

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_shoot" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/damier_background" >

                <LinearLayout
                    android:id="@+id/takePhotos_shoot_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/takePhoto_shoot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_shoot"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extendedComment_shoot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/headerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments" />

            <EditText
                android:id="@+id/comments_shoot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/comments_hints"
                android:inputType="textMultiLine"
                android:lines="5" />
        </LinearLayout>

        <!--  -->

        <TextView
            android:id="@+id/assaultPhotosHeader"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_assault" />

        <LinearLayout
            android:id="@+id/containerAssault"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/damier_background" >

                <LinearLayout
                    android:id="@+id/takePhotos_assault_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/takePhoto_assault"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_assault"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extendedComment_assault"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/headerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments" />

            <EditText
                android:id="@+id/comments_assault"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/comments_hints"
                android:inputType="textMultiLine"
                android:lines="5" />
        </LinearLayout>

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/comments" />

        <EditText
            android:id="@+id/comments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/comments_hints"
            android:inputType="textMultiLine"
            android:lines="10" />

        <com.headbangers.reportmaker.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="top" />
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_table" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_table_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_table"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_table"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_table"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/deployment_type" />

        <EditText
            android:id="@+id/deploymentType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/deployment_type_hint" />

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/scenario" />

        <EditText
            android:id="@+id/scenario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/scenario_hint" />

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/who_start" />

        <Spinner
            android:id="@+id/whoStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/lordCapacityPlayer1"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lord_capacity" />

        <EditText
            android:id="@+id/lordCapacity1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lord_capacity_hint" />

        <TextView
            android:id="@+id/lordCapacityPlayer2"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lord_capacity" />

        <EditText
            android:id="@+id/lordCapacity2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lord_capacity_hint" />

        <TextView
            android:id="@+id/deploymentPlayer1"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_deployment_player" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_deployment1_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_deployment"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_deployment1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_deployment"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            android:id="@+id/deploymentPlayer2"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_deployment_player" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_deployment2_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_deployment"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_deployment2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_deployment"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            android:id="@+id/infiltrationPlayer1"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_infiltration" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_infiltration1_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_infiltration"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_infiltration1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_infiltration"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            android:id="@+id/infiltrationPlayer2"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_infiltration" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_infiltration2_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_infiltration"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_infiltration2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_infiltration"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            android:id="@+id/scootPlayer1"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_scoot" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_scoot1_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_scoot"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_scoot1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_scoot"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            android:id="@+id/scootPlayer2"
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_scoot" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/takePhoto_scoot2_photo"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/photo_scoot"
                android:scaleType="centerCrop"
                android:src="@drawable/damier" />

            <ImageButton
                android:id="@+id/takePhoto_scoot2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/photo_scoot"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_bclk" />
        </LinearLayout>

        <TextView
            style="@style/headerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/comments" />

        <EditText
            android:id="@+id/comments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/comments_hints"
            android:inputType="textMultiLine"
            android:lines="10" />
        
        <com.headbangers.reportmaker.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="top" />

    </LinearLayout>

</ScrollView>